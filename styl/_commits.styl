.svn
  &__commits
    &__table
      width 100%
      height 100%
      font-size 2vmin
      padding 1.5vmin

    &__ellipsis
      overflow hidden
      white-space nowrap
      text-overflow ellipsis

    &__id
      width 6%
      text-align left

    &__author
      width 15%
      text-align left

    &__message
      text-align left
      max-width 0

    &__date
      text-align right
      width 15%
    
    &__error
      display flex
      justify-content center
      align-items center
      height 100%
      font-size 1.5em